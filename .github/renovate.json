{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "labels": [
    "dependencies",
    "no-stale"
  ],
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update _VERSION variables in build.yaml",
      "fileMatch": [
        "^[\\w-]+/build\\.yaml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>[a-z-/]+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s.+?(aarch64|amd64|armhf|armv7|i386).+?(aarch64|amd64|armhf|armv7|i386):(?<currentValue>[0-9\\.]*)\"\\s?",
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>[a-z-/]+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s.*_VERSION: (?<currentValue>[0-9\\.]*)\\s?"
      ]
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "hassio-addons/addon-base",
        "hassio-addons/addon-debian-base"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
